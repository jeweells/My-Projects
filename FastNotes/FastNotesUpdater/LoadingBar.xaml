<UserControl x:Class="FastNotesUpdater.LoadingBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FastNotesUpdater"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">
    <Grid>
        <Border BorderThickness="2" BorderBrush="{StaticResource MainColorDarkBrush}" Background="White" Padding="2">
            <Grid x:Name="ProgressContainer">
                <Border x:Name="ProgressIndicator" Grid.Column="0" Width="70" Background="{StaticResource MainColorDarkBrush}" HorizontalAlignment="Left"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
